pipeline {
  agent { label 'windows-slave' }
  stages {
    stage('BuildUSA') {
      steps {        
        powershell '''
          mkdir peru   
          mkdir chile
        '''    
      }
    }
    stage('Package ArtifactUSA') {
      steps {
        bat '''
          dir
        '''  
        withAWS(credentials:'devops-s3',region:'us-east-1') {
            s3Download(file:'peru/', bucket:'belcorp-codedeploy', path:'SICC/QA-SICC/jenkins-QA-SSICC-21.zip', force:true)
        }
      }        
    }
    stage('BuildUSA') {
      steps {        
        powershell '''
          Expand-Archive -Path $ENV:WORKSPACE\\peru\\jenkins-QA-SSICC-21.zip -DestinationPath $ENV:WORKSPACE\\chile -Force
          ls
        '''   
      }
    }
    stage('Package ArtifactBRA') {
      steps {
        build job: 'DemoLinux'
      }        
    }
  }
}
